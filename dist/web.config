<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Reescrita de URLs -->
    <rewrite>
      <rules>
        <!-- Redirecionar para www -->
        <rule name="Redirect to www" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^devthm.site$" />
          </conditions>
          <action type="Redirect" url="https://www.devthm.site/{R:0}" redirectType="Permanent" />
        </rule>

        <!-- Redirecionar para HTTPS -->
        <rule name="Redirect to HTTPS" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:0}" redirectType="Permanent" />
        </rule>

        <!-- Reescreve URLs amigáveis para arquivos .html -->
        <rule name="Rewrite to HTML" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}.html" matchType="IsFile" />
          </conditions>
          <action type="Rewrite" url="{R:0}.html" />
        </rule>

        <!-- Reescreve URLs amigáveis para arquivos .php -->
        <rule name="Rewrite to PHP" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_FILENAME}.php" matchType="IsFile" />
          </conditions>
          <action type="Rewrite" url="{R:0}.php" />
        </rule>
      </rules>
    </rewrite>

    <!-- Proteção contra acesso não autorizado -->
    <security>
      <requestFiltering>
        <denyUrlSequences>
          <add sequence="/bin/" />
          <add sequence="/App_Code/" />
          <add sequence="/App_Data/" />
          <add sequence="/App_Browsers/" />
          <add sequence="/App_GlobalResources/" />
          <add sequence="/App_LocalResources/" />
          <add sequence="/App_WebReferences/" />
        </denyUrlSequences>
      </requestFiltering>
      <ipSecurity allowUnlisted="false">
        <add ipAddress="127.0.0.1" allowed="true" />
        <add ipAddress="::1" allowed="true" />
        <!-- Adicione aqui mais IPs se necessário -->
      </ipSecurity>
    </security>

    <!-- Protege arquivos sensíveis -->
    <httpErrors errorMode="DetailedLocalOnly">
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" path="/404.html" responseMode="ExecuteURL" />
    </httpErrors>

    <!-- Configuração de Cache -->
    <httpProtocol>
      <customHeaders>
        <add name="Cache-Control" value="public, max-age=31536000" />
        <add name="Expires" value="Fri, 01 Jan 2025 00:00:00 GMT" />
      </customHeaders>
    </httpProtocol>

    <!-- Protege contra listagem de diretórios -->
    <directoryBrowse enabled="false" />

    <!-- Configurações adicionais -->
    <staticContent>
      <clientCache cacheControlMode="UseHttpExpiresHeader" cacheControlMaxAge="1.00:00:00" />
    </staticContent>
  </system.webServer>

  <system.web>
    <!-- Configurações de Segurança e Performance -->
    <httpRuntime requestValidationMode="2.0" />
    <pages validateRequest="true" />
    <customErrors mode="On" defaultRedirect="Error.html">
      <error statusCode="404" redirect="404.html" />
    </customErrors>
  </system.web>
</configuration>
